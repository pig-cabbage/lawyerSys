/* pages/evaluate/evaluate.wxss */
page{
  width: 100%;
  height: 100%;
}
.content{
  margin: 15rpx auto;
  width: 80%;
  height: 12%;
  padding: 20rpx 20rpx;
  border:2px solid #1E90FF;
  box-shadow: 3px 3px 2px #ccc;
  align-items: center;
  color : #8a8a8a;
}
.evaluate{
  margin: 20rpx auto;
  width: 80%;
  height: 60%;
  padding: 20rpx 20rpx;
  border:2px solid #1E90FF;
  border-radius: 30rpx;
  box-shadow: 3px 3px 2px #ccc;
  align-items: center;
}
.score{
  display: flex;
  height: 10%;

}
.score_text{
  width: 30%;
  text-align: center;
}
.content_title{
  width: 30%;
  text-align: center;
  height: 10%;
}
.star{
  margin: 0 auto;
   display:flex; 
   align-items: center;
}
.star_item{
width: 50rpx;
height: 50rpx;
}
.image_item{
  width: 100%;
  height: 100%;
}
.evaluateContent{
  width: 90%;
  height: 73%;
  margin: 7rpx auto;
  padding: 20rpx 20rpx;
  border:2px solid #8a8a8a;
  box-shadow: 3px 3px 2px #ccc;
  text-align: center;
}
.content_bd{
  width: 100%;
  height: 100%;
}
.process_bd{
  width: 100%;
  margin : 0 auto;
  margin-top: 5%;
  
  text-align: center;
}