<!--pages/companyDemand/companyDemand.wxml-->
<view class="page">
    <view class="result_bd">
        <mp-cells>
            <mp-cell link hover value="更换律师详情" url='../projectInfoBefore/projectInfoBefore?data={{data}}&status=12&projectUserChangeLawyerString={{projectUserChangeLawyerString}}'></mp-cell>
            <mp-cell value="申诉时间" footer="{{createTime}}"></mp-cell>
        </mp-cells>
        <mp-cells  title="申诉理由">
        </mp-cells>
        <view >
            <textarea value="{{reason}}" disabled="true" auto-height="true">
            </textarea>
          </view>
    </view>
    <view  class="process_bd">
      <button style="width : 45%;" type="primary" bindtap="refuseLawyer">
          驳回律师申诉请求
      </button>
      <button style="width : 45%;" type="primary" bindtap="refuseCompany">
          驳回企业更换律师请求
      </button>
    </view>
    <modal title="处理意见" hidden="{{modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCandel">
    <view class="text_area">
      <textarea placeholder="请输入处理意见" auto-height="true"  bindinput="inputAdvice">
</textarea>
    </view>
    </modal>
</view>

