/* pages/companyIndex/companyIndex.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  
}
.top{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.red_pot{
  height: 32rpx;
  width: 32rpx;
  line-height: 32rpx;
  font-size: 25rpx;
  margin-top: 20rpx;
  color: rgb(255,255,255);
  background-color: red;
  border-radius : 32rpx;
}
.top_left_text_1{
  display: flex;
}
.top_left{
  align-items: center;
  height: 100rpx;
  width: 50%;
  display: flex;
  border-right:1.3px solid #1E90FF;
  border-bottom:1.3px solid #1E90FF;
  border-radius: 5%;
}
.top_right{
  align-items: center;
  height: 100rpx;
  width: 50%;
  display: flex;
  border-bottom:1.3px solid #1E90FF;
  border-radius: 5%;
}
.top_left_text{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 33rpx;
  color:#A7A7A7;
  text-align: center;
  margin : 0 auto;
  margin-left: 0rpx;
}
.top_left_img{
  width: 40rpx;
  height: 40rpx;
  margin : 0 auto;
  margin-right: 5rpx;
}
.char_card{
  display: flex;
  height: 150rpx;
  width: 100%;
  border-bottom:1px solid #dbdbdb;
}
.head{
  width: 150rpx;
  height: 150rpx;
}
.card_right{
  width: 100%;
}
.right_top{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.right_bottom{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #bfbfbf;
  overflow: hidden; text-overflow:ellipsis; white-space: nowrap;display:block
}
.name{
  width: 80%;
}
.time{
  width: 20%;
  font-size: 30rpx;
  text-align: center;
}

.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
  height: 120rpx;

}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #5f5f5f;
}
.active1{
  color : #1E90FF;
}

.default1{
  color : #A7A7A7;
}

.iconPath {
  width:54rpx;
  height: 54rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  /* border-bottom: 1px solid #eee; */
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 75rpx;
  text-align: center;
  color: black;
  flex: 1;
  /* border-bottom: 1px solid red; */
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
