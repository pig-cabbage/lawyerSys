<!--pages/distributePlan/distributePlan.wxml-->
<!--pages/servicePlanIndex/servicePlanIndex.wxml-->
<view class="page">
    <view class="result_bd">
        <mp-cells>
            <mp-cell  link hover value="选择服务方案" bindtap="choosePlan">
            </mp-cell>
            <mp-cell>
            <view class="weui-flex">
        <view class="weui-flex__item"><view class="placeholder">开始时间</view></view>
        <view class="weui-flex__item"><picker mode="date" fields="month" value="{{startTime}}" start="1970-09-01" end="2100-09-01" bindchange="bindStartTimeChange">
    <view class="picker">{{startTime}}
    </view>
  </picker> </view>
    </view>
  </mp-cell>
  <mp-cell>
            <view class="weui-flex">
        <view class="weui-flex__item"><view class="placeholder">结束时间</view></view>
        <view class="weui-flex__item"><picker mode="date" fields="month" value="{{endTime}}" start="1970-09-01" end="2100-09-01" bindchange="bindEndTimeChange">
    <view class="picker">{{endTime}}
    </view>
  </picker> </view>
    </view>
  </mp-cell>
        </mp-cells>
    </view>
    <modal title="选择服务方案" hidden="{{modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCandel">
    <view class="picker_area">
      <picker bindchange="bindLevelPickerChange" value="{{pickerLevelValue}}" range="{{levelList}}">
    <view class="picker">
      服务等级：{{levelList[pickerLevelValue]}}
    </view>
  </picker>
  <picker bindchange="bindPlanPickerChange" value="{{pickerPlanValue}}" range="{{planList}}">
    <view class="picker">
      服务方案：{{planList[pickerPlanValue]}}
    </view>
  </picker>
    </view>
    </modal>
    <view class="deal_bd">
      <button type="primary"  bindtap="distributePlan">
          确定
      </button>
    </view>
</view>

