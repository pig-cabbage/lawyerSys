<!--pages/servicePlanIndex/servicePlanIndex.wxml-->
<view class="page">
  <view class="search_bd">
        <mp-searchbar  bindinput="bindinput" bindsearch="determine"></mp-searchbar>
    </view>
    <view class="weui-flex">
        <view class="weui-flex__item"><view class="placeholder"><picker bindchange="bindStatusPickerChange" value="{{pickerStatusValue}}" range="{{statusArray}}">
    <view class="picker">
      状态：{{statusArray[pickerStatusValue]}}
    </view>
  </picker></view></view>
        <view class="weui-flex__item"><view class="placeholder"><picker bindchange="bindTimePickerChange" value="{{pickerTimeValue}}" range="{{timeArray}}">
    <view class="picker">
      注册时间：{{timeArray[pickerTimeValue]}}
    </view>
  </picker></view></view>
    </view>
    <view class="result_bd">
        <mp-cells>
            <mp-cell wx:for="{{resultList}}" link hover value="{{item.name}}" data-index="{{index}}" 
           bindtap="goToInfo" >
            </mp-cell>
        </mp-cells>
    </view>
    <view class="add_btn"> 
        <button type="primary" bindtap="addServicePlan">注册新服务</button>
    </view>
</view>

