
<view class="page">
    <view class="result_bd">
        <mp-cells>
            <mp-cell link hover value="项目详情" url="../projectInfoIndex/projectInfoIndex?data={{data}}&status={{status}}">
            </mp-cell>
            <mp-cell wx:if="{{status == 16}}" value="归档编号" footer="{{number}}">
            </mp-cell>
            <mp-cell wx:if="{{status == 12}}" value="发起方" footer="{{creator}}">
            </mp-cell>
            <mp-cell wx:if="{{status == 12}}" value="发起时间" footer="{{createTime}}">
            </mp-cell>
            <mp-cell wx:if="{{status == 12}}" value="原因" footer="{{reason}}">
            </mp-cell>
        </mp-cells>
        <mp-cells wx:if="{{status == 6 && recommmendLawyer == '0'}}">
            <mp-cell  link hover value="需求律师" url="../lawyerInfo/lawyerInfo?id={{demandLawyer}}">
            </mp-cell>
          </mp-cells>
          <mp-cells wx:if="{{status == 6 && recommmendLawyer == '1'}}">
            <mp-cell  value="需求律师" footer="系统推荐">
            </mp-cell>
          </mp-cells>
        <mp-cells wx:if="{{status == 16}}" title="备注信息">
        <mp-cell>
          </mp-cell>
        </mp-cells>
        <view wx:if="{{status == 16}}">
            <textarea value="{{note}}" auto-height="true">
            </textarea>
          </view>
    </view>
    <view wx:if="{{status == 6}}" class="process_bd">
      <button type="primary" bindtap="distributeLawyer">
          分配律师
      </button>
    </view>
    <view wx:if="{{status == 12 && showAuditButton}}" class="process_bd">
      <button style="width : 45%;" type="primary" bindtap="auditChangeApplyAgree">
          审核通过
      </button>
      <button style="width : 45%;" type="warn" bindtap="auditChangeApplyRefuse">
          审核不通过
      </button>
    </view>
    <modal title="选择律师" hidden="{{modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCandel">
    <view class="picker_area">
      <picker bindchange="bindNamePickerChange" value="{{pickerNameValue}}" range="{{lawyerNameList}}">
    <view class="picker">
      律师：{{lawyerNameList[pickerNameValue]}}
    </view>
  </picker>
    </view>
    </modal>
    <modal title="审核意见" hidden="{{modalHidden1}}" bindconfirm="modalConfirm1" bindcancel="modalCandel1">
    <view class="text_area">
      <textarea style="width:100%;" placeholder="请输入审核意见" auto-height="true"  bindinput="inputAdvice" maxlength="140">
</textarea>
    </view>
    </modal>
</view>
