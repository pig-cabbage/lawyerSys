<!--pages/systemMessage/systemMessage.wxml-->
<wxs module="functions" src="../../utils/function.wxs"></wxs>
<scroll-view class="history"  scroll-y="true" scroll-with-animation scroll-top="{{scrollTop}}">
 
 <block wx:key="{{index}}" wx:for="{{allContentList}}">
   <view>
     <text class='time'>{{functions.formatDate(item.createTime)}}</text>
   </view>
   <view class='you_left' id='id_{{allContentList.length}}' wx:key="{{index}}" >
     <view class='p_l'>
       <image class='new_img' src='../../icon/robot.svg' ></image>
       <view class='sanjiao you'></view>
       <view class='new_txt'>
         <view class='new_txt_ai'>
           {{item.content}}
         </view>
         <view wx:if="{{item.appendContent}}" class="new_txt_ai {{item.appendContent==='项目信息'? 'new_text_active' : ''}}">
           {{item.appendContent}}
           <view wx:if="{{item.appendContent === '项目信息'}}" data-id="{{item.itemId}}"  bindtap="goToDetail">>></view>
         </view>
       </view>
     </view>
   </view>
 </block>
</scroll-view>