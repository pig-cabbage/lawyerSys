<!--pages/dataStatisticsIndex/dataStatisticsIndex.wxml-->
<view class="page">
<view class="time">
  <view class="time-text">
    <text>统计时间段</text>
  </view>
  <view class="time-body">
    <picker mode="date" value="{{startDate}}" bindchange="bindDateChange1" fields = "month">
      <view class="picker">
        开始时间：{{startDate}}
      </view>
    </picker>
    <picker mode="date" value="{{endDate}}" bindchange="bindDateChange2" fields="month">
      <view class="picker">
        结束时间：{{endDate}}
      </view>
    </picker>
  </view>
</view>
<view class="object">
  <view class="time-text">
    <text>统计对象</text>
  </view>
  <view class="nav_wrap">
    <!--自己滚动区域的组件-->
    <scroll-view class="nav" scroll-x >
      <view bindtap="activeNav" data-index="{{index}}" 
      class="nav_item {{index===currentIndexNav?'active':''}}" 
      wx:for="{{tabs}}" wx:key="index" >{{item.title}}</view>
    </scroll-view>

  </view>
</view>
<view class="table"  wx:if="{{currentIndexNav == 0}}">
  <view class="tr bg-w">
    <view class="th">服务名称</view>
    <view class="th"><view class="th-top">服务次数</view><view class="th-bottom">单位(次)</view></view>
    <view class="th "><view class="th-top">服务时长</view><view class="th-bottom">单位(天)</view></view>
    <view class="th "><view class="th-top">累计收入</view><view class="th-bottom">单位(万元)</view></view>
  </view>
  <block wx:for="{{serviceList}}">
    <block wx:for="{{item.list}}">
    <view class="tr">
      <view class="td">{{item.planName}}</view>
      <view class="td">{{item.number}}</view>
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.cost}}</view>
    </view>
    </block>
    <block>
      <view class="tr bg-g">
      <view class="td">{{item.levelName}}</view>
      <view class="td">{{item.number}}</view>
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.cost}}</view>
    </view>
    </block>
  </block>
  <block>
      <view class="tr bg-g">
      <view class="td">累计</view>
      <view class="td">{{totalNumber}}</view>
      <view class="td">{{totalDate}}</view>
      <view class="td">{{totalCost}}</view>
    </view>
    </block>
</view>
<view class="table"  wx:if="{{currentIndexNav == 1}}">
  <view class="tr bg-w">
    <view class="th">企业名称</view>
    <view class="th"><view class="th-top">咨询次数</view><view class="th-bottom">单位(次)</view></view>
    <view class="th "><view class="th-top">咨询时长</view><view class="th-bottom">单位(天)</view></view>
    <view class="th "><view class="th-top">累计支出</view><view class="th-bottom">单位(元)</view></view>
  </view>
  <block wx:for="{{companyList}}">
    <view class="tr">
      <view class="td">{{item.name}}</view>
      <view class="td">{{item.number}}</view>
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.cost}}</view>
    </view>
  </block>
  <!-- <block>
      <view class="tr bg-g">
      <view class="td">累计</view>
      <view class="td">{{totalNumber}}</view>
      <view class="td">{{totalDate}}</view>
      <view class="td">{{totalCost}}</view>
    </view>
    </block> -->
</view>
<view class="table"  wx:if="{{currentIndexNav == 2}}">
  <view class="tr bg-w">
    <view class="th">律师名称</view>
    <view class="th"><view class="th-top">服务次数</view><view class="th-bottom">单位(次)</view></view>
    <view class="th "><view class="th-top">服务时长</view><view class="th-bottom">单位(天)</view></view>
    <view class="th "><view class="th-top">累计收入</view><view class="th-bottom">单位(元)</view></view>
  </view>
  <block wx:for="{{lawyerList}}">
    <view class="tr">
      <view class="td">{{item.name}}</view>
      <view class="td">{{item.totalNumber}}</view>
      <view class="td">{{item.totalDate}}</view>
      <view class="td">{{item.totalCost}}</view>
    </view>
  </block>
  <!-- <block>
      <view class="tr bg-g">
      <view class="td">累计</view>
      <view class="td">{{totalNumber}}</view>
      <view class="td">{{totalDate}}</view>
      <view class="td">{{totalCost}}</view>
    </view>
    </block> -->
</view>
</view>


