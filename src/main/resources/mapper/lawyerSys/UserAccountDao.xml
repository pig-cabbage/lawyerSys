<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cabbage.project.lawyerSys.dao.UserAccountDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cabbage.project.lawyerSys.entity.UserAccountEntity" id="userAccountMap">
        <result property="id" column="id"/>
        <result property="certificationStatus" column="certification_status"/>
        <result property="role" column="role"/>
        <result property="createTime" column="create_time"/>
        <result property="unReadMessage" column="un_read_message"/>
    </resultMap>
    <update id="addMessage" parameterType="java.lang.String">
        UPDATE `user_account` SET `un_read_message` = `un_read_message` + 1 WHERE `id` = #{accountId}
    </update>
    <insert id="insertWithId" parameterType="cabbage.project.lawyerSys.entity.UserAccountEntity">
        INSERT INTO `user_account` (`id`, `certification_status`, `create_time`, `un_read_message`)
        VALUES (#{entity.id}, #{entity.certificationStatus}, #{entity.createTime}, #{entity.unReadMessage})
    </insert>


</mapper>